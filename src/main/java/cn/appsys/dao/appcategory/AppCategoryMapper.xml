<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.appsys.dao.appcategory.AppCategoryMapper">
    <!-- 查询一级分类-->
    <select id="getCategoryLevel1" resultType="AppCategory">
        SELECT `id`,`categoryCode`,`categoryName` FROM `app_category` WHERE ISNULL(`parentId`)
    </select>
    <!--查询二,三级分类-->
    <select id="getCategoryLevel2" parameterType="Integer" resultType="AppCategory">
        SELECT `id`,`categoryCode`,`categoryName` FROM `app_category` WHERE `parentId`=#{parentId}
    </select>
</mapper>